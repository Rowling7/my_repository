<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".RegisterActivity">

    <!--
  top栏
  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lodgin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="欢迎 注册"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_LoginName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="用户名(必填)"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:hint="密码（必填）"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/cb_DisplayPassword2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:button="@mipmap/selector_password"
                    android:checked="false" />
            </RelativeLayout>


            <EditText
                android:id="@+id/et_realName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="真实姓名"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="手机号"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_sex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="性别"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="年龄"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_area"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="例：(广西 南宁)"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <!--<EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="收货地址(详细地址)"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPurple"
                    android:onClick="btn_on_click"
                    android:text="立即注册" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>